@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="d-flex align-items-center mb-4">
    <i class="fas fa-lock text-primary me-3 fs-4"></i>
    <h3 class="mb-0">@ViewData["Title"]</h3>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="alert alert-info mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Password Requirements:</strong> Your password must be at least 6 characters long and contain a mix of letters, numbers, and special characters.
                </div>

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <div class="form-floating">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Current password" />
                            <label asp-for="Input.OldPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>Current Password
                            </label>
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-floating">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New password" />
                            <label asp-for="Input.NewPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>New Password
                            </label>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>Confirm New Password
                            </label>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Update Password
                        </button>                       
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <div class="card bg-light border-0">
                <div class="card-body p-3">
                    <h6 class="card-title mb-2">
                        <i class="fas fa-shield-alt text-success me-2"></i>Security Tips
                    </h6>
                    <ul class="mb-0 small text-muted">
                        <li>Use a unique password that you don't use elsewhere</li>
                        <li>Include a mix of uppercase, lowercase, numbers, and symbols</li>
                        <li>Consider using a password manager for better security</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}