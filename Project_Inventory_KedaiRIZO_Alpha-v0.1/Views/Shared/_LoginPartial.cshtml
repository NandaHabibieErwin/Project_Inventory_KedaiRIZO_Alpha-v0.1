@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="auth-section d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="user-info d-flex align-items-center me-3">
            <div class="user-avatar me-2">
                <i class="bi bi-person-circle text-white" style="font-size: 1.5rem;"></i>
            </div>
            <div class="user-details">
                <span class="user-greeting text-white-50 small">Welcome,</span>
                <div class="user-name fw-semibold">
                    <a class="nav-link text-white p-0" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage Account">
                        @User.Identity?.Name
                    </a>
                </div>
            </div>
        </div>
        
        <div class="auth-actions">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    Logout
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="auth-actions">
            <a class="btn btn-outline-light btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>
                Login
            </a>
            <a class="btn btn-light btn-sm" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>
                Register
            </a>
        </div>
    }
</div>

<style>
    .auth-section {
        min-height: 40px;
    }
    
    .user-info {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 8px 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
    }
    
    .user-greeting {
        font-size: 0.75rem;
        line-height: 1;
        margin-bottom: 2px;
    }
    
    .user-name {
        font-size: 0.9rem;
        line-height: 1.2;
    }
    
    .user-name a {
        text-decoration: none;
        transition: color 0.2s ease;
    }
    
    .user-name a:hover {
        color: rgba(255, 255, 255, 0.8) !important;
    }
    
    .auth-actions .btn {
        transition: all 0.2s ease;
        font-size: 0.875rem;
        border-width: 1px;
    }
    
    .auth-actions .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }
    
    .auth-actions .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        color: white;
    }
    
    .auth-actions .btn-light {
        background-color: white;
        border-color: white;
        color: var(--bs-primary);
        font-weight: 500;
    }
    
    .auth-actions .btn-light:hover {
        background-color: rgba(255, 255, 255, 0.9);
        border-color: rgba(255, 255, 255, 0.9);
        color: var(--bs-primary);
    }
    
    @@media (max-width: 768px) {
        .user-info {
            padding: 6px 10px;
        }
        
        .user-greeting {
            display: none;
        }
        
        .auth-actions .btn {
            font-size: 0.8rem;
            padding: 0.25rem 0.75rem;
        }
        
        .auth-actions .btn .bi {
            display: none;
        }
    }
</style>
